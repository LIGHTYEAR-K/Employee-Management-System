doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', type='text/css', href='https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel='stylesheet', href='./css/main.css')
    title Admin Dashboard
  body
    #wrapper.d-flex
      // Sidebar
      #sidebar-wrapper.bg-white
        .sidebar-heading.text-center.py-4.primary-text.fs-4.fw-bold.text-uppercase.border-bottom
          i.fas.fa-user-secret.me-2
          | EMS
        .list-group.list-group-flush.my-3
          a.list-group-item.list-group-item-action.bg-transparent.second-text.active(href='userlist')
            i.fas.fa-tachometer-alt.me-2
            | UserList
          a#block.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold(href='userrole')
            i.fas.fa-project-diagram.me-2
            | UserRole
          a#off.list-group-item.list-group-item-action.bg-transparent.text-danger.fw-bold(href='login')
            i.fas.fa-power-off.me-2
            | Logout
      // /#sidebar-wrapper
      // Page Content
      #page-content-wrapper
        nav.navbar.navbar-expand-lg.navbar-light.bg-transparent.py-4.px-4
          .d-flex.align-items-center
            i#menu-toggle.fas.fa-align-left.primary-text.fs-4.me-3
            h2.fs-2.m-0 Dashboard
          // Button trigger modal
          button#btn.btn.btn-primary(type='button', data-target='#exampleModal')
            | Add User
          // Modal
          #goal.modal(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#exampleModalLabel.modal-title Add User
                  button#close.close(type='button', aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                  form#forms(method='POST',autocomplete='off')
                    .form-group#idd.d-flex.pb-2
                      input#ids(type="hidden",name="ids")
                      input#value(type="hidden",value='',name="value")
                    .form-group.d-flex.pb-2 
                      label.mt-2(for='Name') First Name* 
                      input#fl.w-50.form-control(type='text',name='fname',placeholder='First Name')
                      span#msg 
                    .form-group.d-flex.pb-2 
                      label.mt-2(for='lName') Last Name 
                      input#lname.w-50.form-control(type='text',name='lname',placeholder='Last Name')
                      span#msg  
                    .form-group.d-flex.pb-2
                      label#group.mt-2(for='UserName') Username*  
                      input#user.w-50.form-control(type='text',name='username',placeholder='UserName')
                      span#msgg.text-danger 
                    .form-group.group.d-flex.pb-2
                      label#lab.mt-2(for='Passwword') Password* 
                      input#pass.w-50.form-control(type='password',name='passw',placeholder='Password') 
                    .form-group.d-flex.pb-2
                      label.mt-2(for="role")  Role*
                      select#roles.w-50(name='role')
                        option#role(value="",required) Enter your Role
                        each x in passed 
                            option(value= x.Role) #{x.Role}
                    .form-group.d-flex.pb-2 
                      label.mt-2(for='Email') Email
                      input#Email.w-50.form-control.mx-auto(type='Email',name='mail' ,placeholder='Your Email ID')

                    .form-group.d-flex.pb-2 
                      label.mt-2(for='PhoneNo') PhoneNo*
                      input#phones.w-50.form-control.io(type='tel',name='phoneno', placeholder='Your PhoneNo ',minlength='10',maxlength='10' )
                    .form-group.d-flex.pb-2 
                      label.mt-2(for='locate') Location
                      input#locate.w-50.form-control.oo(type='text',name='city', placeholder='Your Location')
                    .modal-footer
                    span#req.text-danger
                    button.btn.btn-primary.reload(type='submit') Save
                    button.btn.btn-secondary.close.oi(type='button') Close
        
          button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.ms-auto.mb-2.mb-lg-0
              li.nav-item.dropdown
                a#navbarDropdown.nav-link.dropdown-toggle.second-text.fw-bold.admin(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                  i.fas.fa-user.me-2
                  | Users
                ul.dropdown-menu(aria-labelledby='navbarDropdown')
                  li
                    a#off.dropdown-item(href='/login') Logout
        h3.text-center.text-success User List
        select#filter.form-select.form-select-lg.mb-3.w-25(aria-label='.form-select-lg example')
          option#filt(value="") Select Role
          each x in passed 
            option(value= x.Role) #{x.Role}
        .container-fluid.px-4
          .row.my-5
            .col
              table#example.display(style='width:100%;')
              thead
                id
                FirstName
                LastName
                Role
                E-MailId
                Phone:No
                Location
              tbody



