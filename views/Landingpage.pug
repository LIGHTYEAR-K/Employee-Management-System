    script.
          $('h1').css("fontSize", "40px");

          let el = document.getElementById("wrapper");
          let toggleButton = document.getElementById("menu-toggle");
          toggleButton.onclick = function () {
          el.classList.toggle("toggled");
          };    

          //To Access UserName    
          let lsr = localStorage.getItem('roles');
          let obj= JSON.parse(lsr)
          $('.admin').text(obj.Role)
          let fname=(obj.FirstName).toUpperCase()
          let lname=(obj.LastName).toUpperCase()
          $('span').text(fname+" "+lname)

          //Userrole Permissions
          if(object.menus[0].actions.view != "true"){
              $('#userlist').hide()
          }
          if(object.menus[1].actions.view != "true"){
              $('#userrole').hide()
          }

          //Clear LocalStorage
          $('#off').click(()=>{
          localStorage.clear()
          })



